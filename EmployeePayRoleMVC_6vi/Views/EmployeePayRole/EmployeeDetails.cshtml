    </dl>
</div>
<div style="margin-top: 20px;">

    @Html.ActionLink("Edit", "Update", new { id = Model.EmployeeId }, new { style = "padding: 10px 15px; background-color: #3498db; color: white; text-decoration: none; border: 1px solid #3498db; border-radius: 4px; transition: background-color 0.3s;" })

