@model RepositoryLayer.Entities.EmployeeEntity

@{
    ViewData["Title"] = "EmployeeDetails";
}

<h1>EmployeeDetails</h1>


<style>
    /* Apply styles to the container */
    .employee-details-container {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    /* Style for the headings */
    h1, h4 {
        color: #3498db;
    }

    /* Style for the definition list */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    dt {
        float: left;
        width: 30%;
        font-weight: bold;
        color: #555;
    }

    dd {
        float: left;
        width: 70%;
        margin-left: 0;
        color: #333;
    }

    /* Style for the links */
    .action-links {
        margin-top: 20px;
    }

        .action-links a {
            text-decoration: none;
            padding: 10px 15px;
            margin-right: 10px;
            border: 1px solid #3498db;
            border-radius: 4px;
            color: #fff;
            background-color: #3498db;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .action-links a:hover {
                background-color: #2074a0;
            }



</style>

<div>
    <h4>EmployeeEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
