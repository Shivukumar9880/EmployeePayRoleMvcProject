@model List<RepositoryLayer.Entities.EmployeeEntity>

@{
    ViewData["Title"] = "GetAllEmplo yees";
}

<style>
    /* Apply styles to the container */
    .container {
        margin: 20px;
    }

    /* Style for the action links */
    .action-links span {
        border: 2px solid black;
        background-color: aquamarine;
        color: white;
        border-radius: 10px;
        padding: 10px;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .action-links span:hover {
            background-color: darkcyan;
        }

    /* Style for the table */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 2px solid black;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: steelblue;
        color: white;
    }

    tr:nth-child(even) {
        background-color: thistle;
    }

    /* Style for the action links in the table */
    .action-links-table a {
        text-decoration: none;
        padding: 5px 10px;
        margin-right: 5px;
        border: 1px solid #3498db;
        border-radius: 4px;
        color: #fff;
        background-color: #3498db;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .action-links-table a:hover {
            background-color: #2074a0;
        }
</style>

